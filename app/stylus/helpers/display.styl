// Display
// =================================================================================================
borderbox-all()
  *
    box-sizing border-box

table(table-layout-auto = false)
  display table
  table-layout fixed
  width 100%

  if table-layout-auto
    table-layout auto

table-cell(vertical-align-middle = false)
  display table-cell

  if vertical-align-middle
    vertical-align middle
  else
    vertical-align top

flex-ie-height-fix()
  display flex
  flex-direction column
