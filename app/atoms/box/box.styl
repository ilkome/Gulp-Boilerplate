.box
  background white

  &_grey
    color white
    background none

    & ^[-1]__in
      background alpha(black, 0.5)

  &_darkgrey
    color white

    & ^[-1]__in
      background alpha(black, 0.7)

  &_skills
    color white
    background url("../img/bg-code.jpg") 0 0 no-repeat
    bg-cover()

    & ^[-1]__in
      padding-bottom 0
      background alpha(black, .8)

  &_nopadding
    & ^[-1]__in
      padding-bottom 0

  &__in
    padding padding-main 0

    @media tablet
      padding (padding-main * padding-tablet) 0

    @media laptop
      padding (padding-main * padding-laptop) 0

  &_nopadding
    .box__in
      padding-bottom 0

  &__name
    display block
    position relative
    max-width max-width
    margin 0 auto
    padding 0 padding-small
    padding-bottom padding-main
    text-align center

    @media tablet
      padding-bottom padding-main * padding-tablet

    @media laptop
      padding-bottom padding-main * padding-laptop

    &_nopadding
      padding-bottom 0

    &_small
      padding-bottom padding-main

    &_alignleft
      @media tablet
        text-align left

    h2
      margin 0
      font-size 36px
      line-height 30px

      @media tablet
        line-height @line-height * padding-tablet
        font-size @font-size * padding-tablet

      @media laptop
        font-size @font-size * padding-laptop
        line-height @line-height * padding-laptop

    p
      padding-top 10px
      margin-bottom 0
      font-size 14px

      @media tablet
        padding-top @padding-top * padding-tablet
        font-size @font-size * padding-tablet

      @media laptop
        padding-top @padding-top * padding-laptop
        font-size @font-size * padding-tablet

  &__content
    padding 0 padding-small
    max-width max-width
    margin 0 auto

    p:last-child
      margin-bottom 0
