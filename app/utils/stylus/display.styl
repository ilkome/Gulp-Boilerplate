// Display
// =================================================================================================
borderbox-all()
	*
		box-sizing border-box

table(table-layout-fixed = false)
	display table
	width 100%

	if table-layout-fixed
		table-layout auto
	else
		table-layout fixed

table-cell(vertical-align-middle = false)
	display table-cell

	if vertical-align-middle
		vertical-align middle
	else
		vertical-align top

flex-ie-height-fix()
	display flex
	flex-direction column
